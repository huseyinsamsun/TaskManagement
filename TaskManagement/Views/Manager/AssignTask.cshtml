@using Entities.Abstract

@model AssignTaskForUserDto
@{
    ViewData["Title"] = "AssignTask";
    Layout = "~/Views/Shared/_Manager.cshtml";
}
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
     <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

<h1>Kullanıcıya Task Ata</h1>
<form asp-action="AssignTask">
<div class="form-group last mb-4">
    <label asp-for="TaskId" class="control-label">Task Başlığı </label>
    <select asp-for="TaskId" class="form-control" asp-items=" ViewBag.Task"></select>

</div>

<div class="form-group last mb-4">
    <label asp-for="Priotrity" class="control-label"> Öncelik </label>
    <select asp-for="Priotrity" class="form-control" asp-items=" Html.GetEnumSelectList<PriotrityEnums>()"></select>

</div>
    <div class="form-group">
                <input type="submit" id="giris" value="Kaydet" class="btn btn-primary" />
            </div>
</form>

<script> 
$('#giris').click(function() {
    swal({
        title: " ",
        text: "Task Eklenmiştir",
        icon: "success",


    });
 
});
     
 
    </script>