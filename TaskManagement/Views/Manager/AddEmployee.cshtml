@model EmployeeAddDto
@{
    ViewData["Title"] = "AddEmployee";
    Layout = "~/Views/Shared/_Manager.cshtml";
}

<h1>Personel Ekle</h1>

 <form asp-controller="Manager"  asp-action="AddEmployee" method="post">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group first">
                    <label asp-for="FirstName">Adı</label>
                    <input asp-for="FirstName" class="form-control" > 
            
                </div>

                <div class="form-group first">
                    <label asp-for="LastName">Soyadı</label>
                    <input asp-for="LastName" class="form-control" > 
                    <span asp-validation-for="LastName" class="text-danger"></span>
              </div>

              <div class="form-group last mb-4">
                <label asp-for="Email">Mail Adresi</label>
                <input asp-for="Email" class="form-control" > 
                <span asp-validation-for="Email" class="text-danger"></span>
              </div>

              <div class="form-group last mb-4">
                <label asp-for="UserName">Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control" > 
                <span asp-validation-for="UserName" class="text-danger"></span>
              </div>




               <div class="form-group last mb-4">
                  <label asp-for="Password">Parolası</label>
                  <input asp-for="Password" class="form-control" type="password">
                  <span asp-validation-for="Password" class="text-danger"></span>
              </div>
             
              <input type="submit" value="Kaydet" class="btn btn-block btn-primary">
              
            </form>