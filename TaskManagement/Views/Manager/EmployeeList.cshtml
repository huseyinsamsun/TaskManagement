@model List<AppUser>
@{
    ViewData["Title"] = "Users";
      Layout = "~/Views/Shared/_Manager.cshtml";
     
}
<table class="table table-bordered table-striped">
    <tr>

     <th>Adi</th>
     <th>Soyadi</th>
     <th>User Name</th>
     <th>Email</th>
     <th>Atanmış Roller</th>
     <th>Rol Atama</th>

    </tr>
    @if(Model.Count()==0)
    {
        <tr>
            <td colspan=3>Hiç bir üye yoktur</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
       {
           <tr>
               <td>@item.FirstName</td>
                <td>@item.LastName</td>
               <td>@item.UserName</td>
               <td>@item.Email</td>
               <td user-roles="@item.Id"></td>
               <td><a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">  Rol ata</a> </td>
               <td><a href="/Manager/AssignTask?id=@item.Id" type="sumbit" class="btn btn-warning">Task Ataması Gerçekleştir</a>   </td>

           </tr>
       }
    }
</table>

